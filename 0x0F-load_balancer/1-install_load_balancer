#!/usr/bin/env bash
# balancer install
sudo apt-get -y update
sudo apt-get install -y haproxy
echo "
frontend obelenge
    bind *:80
    mode http
    default_backend backend_server

backend backend_server
    balance roundrobin
    server 301399-web-01 34.203.29.82 check
    server 301399-web-02 100.25.139.67 check " >> /etc/haproxy/haproxy.cfg

sudo service haproxy restart
